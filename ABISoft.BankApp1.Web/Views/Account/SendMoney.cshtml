@model SelectList

@{
    //Layout
    Layout = "~/Views/Shared/_Layout.cshtml";

    //General
    var selectList = Model;
}


<form action="SendMoney" method="post">
    <div hidden class="form-group">
        <label for="senderAccountId">Id :</label>
        <input type="text" id="senderAccountId" name="senderAccountId" value="@ViewBag.SenderAccountId" class="form-control" placeholder="Id">
    </div>
    <div class="form-group">
        <label for="accountNumber">Account Number to send money:</label>
        <select class="form-select" asp-items="selectList" name="receiverAccountId">
            <option disabled selected>AccountNumber</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label for="amount">Amount to be sent :</label>
        <input type="text" id="amount" name="amount" class="form-control" placeholder="Amount">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Send Money</button>
</form>